                <layer primitive="rock">
                    over(slope, 0.5, 0.5)
                </layer>
            </layers>
        </class>
        <class name="grassland">
            <layers>
                <layer primitive="rock">
                </layer>
                <layer primitive="grass">
                    under(slope, 0.4, 0.3) *
                    under(elevation, 2500, 500) *
                    under(curvature, 0.8, 0.1);
                </layer>
                <layer primitive="dirt">
                    1.0-density;
                </layer>
            </layers>
        </class>
        <class name="cropland">
            <layers>
                <layer primitive="dirt">
                </layer>
                <layer primitive="grass">
                    under(slope, 0.4, 0.3) *
                    under(elevation, 2500, 500) *
                    under(curvature, 0.8, 0.1) *
                    density;
                </layer>
            </layers>
        </class>
        <class name="swamp">
            <layers>
                <layer primitive="water">
                </layer>
                <layer primitive="grass">
                    under(slope, 0.4, 0.3) * density;
                </layer>
            </layers>
        </class>
        <class name="desert">
            <layers>
                <layer primitive="rock">
                </layer>
                <layer primitive="sand">
                    under(slope, 0.3, 0.3) * density * noise*1.5;
                </layer>
            </layers>
        </class>
        <class name="barren">
            <layers>
                <layer primitive="rock">
                </layer>
                <layer primitive="dirt">
                    1.0-density*noise
                </layer>
            </layers>
        </class>
        <class name="savanna">
            <layers>
                <layer primitive="dirt">
                </layer>
                <layer primitive="grass">
                    (1.0-slope)*noise*1.5
                </layer>
                <layer primitive="tundra">
                    over(elevation, 2900, 1000) * noise
                </layer>
            </layers>
        </class>
    </classes>

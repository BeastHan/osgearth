        <class name="tundra">
            <layers>
                <layer primitive="rock">
                </layer>
                <layer primitive="tundra">
                    under(slope, 0.5, 0.4) * noise*2
                </layer>
            </layers>
        </class>
        <class name="forest">
            <layers>
                <layer primitive="forestfloor">
                </layer>
                <layer primitive="grass">
                    (1.0-density)*noise
